# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Product {
  id: ID!
  code: String!
  name: String!
  price: Int!
}

input NewProduct {
  name: String!
  price: Int!
}

type Mutation {
  createProduct (input: NewProduct!): Product!
}

type Query {
  getProducts: [Product]
  getProduct (code:String!): Product
}
